@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratórios";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <table class="table">
        <tr><td><center>Nenhum laboratório foi cadastrado!</center></td></tr>
        <tr><td><center><a href="/Lab/Cadastro" class="btn btn-sm btn-outline-success">+</a></center></td></tr>
    </table>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Número</th>
                <th>Nome</th>
                <th>Bloco</th>
                <th>Detalhes</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var lab in Model){
                <tr>
                    <td>@lab.Id</td>
                    <td>@lab.Number</td>
                    <td>@lab.Name</td>
                    <td>@lab.Block</td>
                    <td><a href="/Lab/Show/@lab.Id" class="btn btn-primary btn-sm btn-dark">Ver</a></td>
                </tr>
            }
            <tr>
                <td colspan="5"><center><a href="/Lab/Cadastro" class="btn btn-sm btn-outline-success">+</a></center></td>
            </tr>
        </tbody>
    </table>
}